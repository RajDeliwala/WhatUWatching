@model Show.Core.ViewModels.ShowListView
@{
    ViewBag.Title = "Home Page";
}

<h1>Shows</h1>
<div class="col-md-2">
    <h4>Filter by Season</h4>
    <div class="list-group">
        @Html.ActionLink("All", "Index", null, new { @class = Request["Season"] == null ? "list-group-item active" : "list-group-item"})
        @foreach (var cat in Model.showSeason)
        {
            @Html.ActionLink(cat.ShowSeasonAired, "Index", new {Season = cat.ShowSeasonAired }, new { @class = Request["Season"] == cat.ShowSeasonAired ? "list-group-item active" : "list-group-item" })
        }
    </div>

</div>


<div class="col-md-10">


@foreach (var item in Model.shows)
{
    <div class="col-md-4" style="height:450px;padding:10px;margin:10px;border: solid thin whitesmoke">
        <div class="col-md-12">
            <img class="img" style="height:250px" src="~/Content/ShowImages/@item.Image"/>
        </div>
        <div class="col-md-12">
            <strong>@Html.ActionLink(item.Name, "Details", new {id = item.Id })</strong>
        </div>
        <div class="col-md-12">
            <p>@item.Description</p>
        </div>
        <div class="col-md-12">
            <h4>@item.Studio</h4>
        </div>
        <div class="col-md-12">
            <a href="@Url.Action("AddToWatchList","WatchList", new { Id = item.Id })" class="btn btn-default">Add to Watch List</a>
        </div>

    </div>
}
</div>
<div class="col-md-12 clearfix"/>