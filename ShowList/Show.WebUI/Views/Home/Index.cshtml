@model IEnumerable<Show.Core.Models.ShowModel>
@{
    ViewBag.Title = "Home Page";
}

<h1>Shows</h1>
@foreach (var item in Model)
{
    <div class="col-md-4" style="height:450px;padding:10px;margin:10px;border: solid thin whitesmoke">
        <div class="col-md-12">
            <img class="img" style="height:250px" src="~/Content/ShowImages/@item.Image"/>
        </div>
        <div class="col-md-12">
            <strong>@Html.ActionLink(item.Name, "Details", new {id = item.Id })</strong>
        </div>
        <div class="col-md-12">
            <p>@item.Description</p>
        </div>
        <div class="col-md-12">
            <h4>@item.Studio</h4>
        </div>
        <div class="col-md-12">
            <a href="#" class="btn btn-default">Add to watch list</a>
        </div>

    </div>
}
<div class="col-md-12 clearfix"/>