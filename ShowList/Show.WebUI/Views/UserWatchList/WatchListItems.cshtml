@model IEnumerable<Show.Core.Models.OrderWatchListItem>
<table class="table">
    <tr>
        <th>

        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShowName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShowDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShowSeason)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShowStudio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShowEpisodeCount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td><img style="height:50px" class="img" src="~/Content/ShowImages/@item.Image" /></td>
    <td>
        @Html.DisplayFor(modelItem => item.ShowName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ShowDescription)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ShowSeason)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ShowStudio)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ShowEpisodeCount)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
